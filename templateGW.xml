<!--
Gateway config file
-->
<xml>
	<devices>
		<device>
			<type>ISR</type>
			<howtoconnect><!--Should be used only with telnet connection-->
				<waitfor>User</waitfor>
				<write>device.user</write>
				<write>device.password</write>
			</howtoconnect>
			<config>
				<connect>device.ip</connect>
				<write>enable</write>
				<write>configure terminal</write>
				<write>ntp server 192.168.0.1</write>
				<write>end</write>
				<write>copy running-config startup-config</write>
				<wait>2000</wait>
				<write></write>
				<wait>4000</wait>
				<write>reload in 30</write>
				<wait>1000</wait>
				<write></write>
				<write>configure terminal</write>
				<write>'ip route 0.0.0.0 0.0.0.0 '+device.newgateway</write>
				<write>interface gigabitethernet 0/0</write>
				<write>'ip address '+device.newip</write>
				<disconnect></disconnect>
				<connect>device.newip</connect>
				<write>configure terminal</write>
				<write>'no ip route 0.0.0.0 0.0.0.0 '+device.gateway</write>
				<write>end</write>
				<write>copy running-config startup-config</write>
				<wait>2000</wait>
				<write></write>
				<wait>4000</wait>
				<write>reload cancel</write>
				<wait>4000</wait>
				<write></write>
			</config>
		</device>
		<device>
			<type>VG</type>
			<howtoconnect>
				<waitfor>User</waitfor>
				<write>device.user</write>
